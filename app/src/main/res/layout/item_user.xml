<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10"
    android:layout_marginTop="@dimen/margin_small"
    android:background="#fff">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvItemUser_Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phanthanhtu"
            android:textSize="@dimen/textSize_medium"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_medium"/>
        <TextView
            android:id="@+id/tvItemUser_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvItemUser_Username"
            android:text="Name"
            android:drawableLeft="@drawable/ic_person" />
        <TextView
            android:id="@+id/tvItemUser_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvItemUser_Name"
            android:text="Address"
            android:drawableLeft="@drawable/ic_address"/>
        <TextView
            android:id="@+id/tvItemUser_PhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvItemUser_Address"
            android:text="Phone Number"
            android:drawableLeft="@drawable/ic_phone"/>
        <TextView
            android:id="@+id/tvItemUser_WrongfulNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvItemUser_Address"
            android:text="Wrongful Number"
            android:drawableLeft="@drawable/ic_warning"/>
        </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvItemUser_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/status_active"
            android:text="Active"
            android:padding="@dimen/padding_small"
            android:layout_margin="@dimen/padding_small"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <ImageButton
                android:id="@+id/imbItemUser_Edit"
                android:layout_weight="1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@android:drawable/ic_menu_edit"/>
            <ImageButton
                android:id="@+id/imbItemUser_Delete"
                android:layout_weight="1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@android:drawable/ic_delete"/>
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
